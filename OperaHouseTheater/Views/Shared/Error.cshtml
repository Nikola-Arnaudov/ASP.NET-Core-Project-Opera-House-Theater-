@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card">
    <div class="card-header text-danger">
        <h3>Ooops... Error.</h3>
    </div>
    <div class="card-body">
        <h4 class="card-title text-danger">@Model.Message</h4>
        <p class="card-text text-danger">An error occurred while processing your request. Please contact with our website support.</p>
    </div>
</div>