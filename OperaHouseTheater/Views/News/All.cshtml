@model IEnumerable<NewsListingViewModel>

@{ViewData["Title"] = "Новини"; }

<a class="nav-link shadow btn-primary m-4 text-center " asp-area="" asp-controller="News" asp-action="Add">
    + Добави новина
</a>
<div class="row">
    @foreach (var news in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3 shadow">
                <img class="card-img-top" src="@news.ImageUrl" alt="...">
                <div class="card-body text-center">
                    <span>Opera House Theater</span>
                    <h5 style="color:#ba9765" class="card-title text-center">@news.Title</h5>
                    <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="btn btn-info">Виж повече</a>
                    <a asp-controller="News" asp-action="Delete" asp-route-id="@news.Id" class="btn btn-info">Delete</a>
                </div>
            </div>
        </div>

    }
</div>



