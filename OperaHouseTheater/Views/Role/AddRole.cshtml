@model AddRoleFormModel

@{ViewData["Title"] = "Create new Role"; }


<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Добавяне на роля</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name">Роля</label>
                    <input asp-for="Name" class="form-control" placeholder="Име на роля...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PerformanceId"></label>
                    <select asp-for="PerformanceId" class="form-control">
                        @foreach (var title in Model.PerformanceTitles)
                        {
                            <option value="@title.Id">@title.Title</option>
                        }
                    </select>
                    <span asp-validation-for="PerformanceTitles" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Save" />
            </form>

        </div>
    </div>
</div>