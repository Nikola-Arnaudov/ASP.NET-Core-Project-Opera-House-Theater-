@model BecomeMemberFormModel

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Become member</h2>
            <h5 class="text-danger text-center">You should become member if you want to add comments or buy some tickets.</h5>
            <form method="post">
                <div class="form-group">
                    <label asp-for="MemberName">Име</label>
                    <input asp-for="MemberName" class="form-control" placeholder="Вашето име...">
                    <span asp-validation-for="MemberName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Телефонен номер</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="0888888888">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Save" />
            </form>

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
